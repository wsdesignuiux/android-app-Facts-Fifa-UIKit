<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f2f5"
    android:orientation="vertical"
    tools:context=".Facts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/mask_group_6">

                <include layout="@layout/toolbar" />


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:text="Group C"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="40dp"
                        android:text="Japan"
                        android:textColor="#ffffff"
                        android:textSize="12.7sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_japan" />

                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 - 0 "
                        android:textColor="#ffffff"
                        android:textSize="13.7sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_france" />


                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="50dp"
                        android:text="France"
                        android:textColor="#ffffff"
                        android:textSize="12.7sp" />


                </LinearLayout>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="Moscow, Luzhniki Stadium"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />


            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="21.72dp"
                    android:paddingRight="25dp">


                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="39.32dp"
                        android:text="Stadium"
                        android:textColor="#383838"
                        android:textSize="15.3dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16.7dp"
                            android:layout_height="11.87dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_stadium" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Stadium"
                            android:textColor="#383838"
                            android:textSize="12.3sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Luzhniki Stadium"
                            android:textColor="#cfbc91"
                            android:textSize="12.3sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14.7dp"
                            android:layout_height="13.87dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_skyline" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="City"
                            android:textColor="#383838"
                            android:textSize="12.3sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moscow"
                            android:textColor="#cfbc91"
                            android:textSize="12.3sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="22dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14.7dp"
                            android:layout_height="13.87dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_teamwork" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Attendance"
                            android:textColor="#383838"
                            android:textSize="12.3sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78.011"
                            android:textColor="#cfbc91"
                            android:textSize="12.3sp" />


                    </LinearLayout>

                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="39.32dp"
                        android:text="Weather"
                        android:textColor="#383838"
                        android:textSize="15.3dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14.7dp"
                            android:layout_height="13.87dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_sun" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Conditions"
                            android:textColor="#383838"
                            android:textSize="12.3sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Partly Cloudly"
                            android:textColor="#cfbc91"
                            android:textSize="12.3sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="9.7dp"
                            android:layout_height="13.87dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_thermometer" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Temperature"
                            android:textColor="#383838"
                            android:textSize="12.3sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24  C"
                            android:textColor="#cfbc91"
                            android:textSize="12.3sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10.7dp"
                            android:layout_height="13.87dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_drop_silhouette" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Humidity"
                            android:textColor="#383838"
                            android:textSize="12.3sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34%"
                            android:textColor="#cfbc91"
                            android:textSize="12.3sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="14.7dp"
                            android:layout_height="13.87dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_wind_sign" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Wind"
                            android:textColor="#383838"
                            android:textSize="12.3sp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11 km/h"
                            android:textColor="#cfbc91"
                            android:textSize="12.3sp" />


                    </LinearLayout>

                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="39.32dp"
                        android:text="Officials"
                        android:textColor="#383838"
                        android:textSize="15.3dp" />


                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_group_23" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/group_271" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_football_court_top_view" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/stadium1" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/group_261" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Events"
                android:textColor="#cbcfdd"
                android:textSize="8.9sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>